#!/bin/sh

if [ "$#" -gt 1 ] || [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
    echo "usage: rpmf [<file>]"
    exit 1
fi

dir="/var/lib/urpmi"


if /bin/ls $dir/hdlist.* >/dev/null 2>/dev/null; then
    packdrake -c $dir/hdlist.* | hdlist2files - | grep -E "$1"
else
    echo "urpmi is not installed"
    exit 1
fi

